{
	"name": "ghostpublish",
	"displayName": "GhostPublish",
	"description": "Publishes markdown files to Ghost",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ghostpublish.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ghostpublish.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": {
			"title": "Ghost Publish",
			"properties": {
				"ghostpublish.adminKey": {
					"type": "string",
					"default": "Empty",
					"description": "Admin key from ghost"
				},
				"ghostpublish.apiUrl": {
					"type": "string",
					"default": "Empty",
					"description": "API URL for your ghost"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@tryghost/admin-api": "^1.3.1",
		"showdown": "^1.9.1"
	}
}
